%h2
  = link_to l(:label_project_milestone_plural), :controller => :project_milestones, :action => :index, :project_id => @project
  &#187;
  =l(:label_milestone_issue_new, :issue => link_to("##{@issue.id}", issue_path(@issue), :title => @issue.subject))

%form{:action => url_for(:action => :create), :method => :post}
  = hidden_field_tag :issue_id, @issue.id
  = render :partial => 'form'
  = submit_tag l(:button_create)
  = link_to l(:button_cancel), issue_path(@issue)
